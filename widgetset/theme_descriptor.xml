<?xml version="1.0" encoding="UTF-8"?>
<styles>
    <variables>
        <variable name="appRotationDuration" value="500"/>
        <variable name="pageFadingDuration" value="250"/>
        <variable name="textSizeSmall" value="12"/>
        <variable name="textSizeNormal" value="16"/>
        <variable name="textSizeLarge" value="22"/>
        <variable name="defaultFont" value="Nokia Sans"/>
        <variable name="pageRadius" value="10"/>
        <variable name="busy" value="true"/>
    </variables>
    <control id="Page">
        <layout id="Normal">
            <setting name="imageUrl" value="qrc:/default/dark-texture-background" />
            <setting name="fillColor" value="transparent" />
            <setting name="radius" value="5" />
        </layout>
    </control>
    <control id="PushButtonStyle">
        <layout id="Normal">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="white" />
            <setting name="imageUrl" value="qrc:/default/pushbutton-normal" />
            <setting name="imageBorders" value="[6,6,6,6]" />
        </layout>
        <layout id="Pressed">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="lightgray" />
            <setting name="imageUrl" value="qrc:/default/pushbutton-pressed" />
            <setting name="imageBorders" value="[6,6,6,6]" />
        </layout>
    </control>
    <control id="ToolButtonStyle">
        <layout id="Normal">
            <setting name="imageUrl" value="" />
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="silver" />
        </layout>
        <layout id="Pressed">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="#00aacb" />
            <setting name="imageUrl" value="qrc:/default/tool-button" />
        </layout>
        <layout id="Highlighted">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="#00aacb" />
            <setting name="imageUrl" value="qrc:/default/tool-button" />
        </layout>
    </control>
    <control id="NaviBackStyle">
        <layout id="Normal">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="white" />
            <setting name="imageUrl" value="qrc:/default/navi-back" />
            <setting name="imageBorders" value="[14,5,5,5]" />
        </layout>
        <layout id="Pressed">
            <setting name="fontFamily" value="Nokia Sans" />
            <setting name="fontColor" value="white" />
            <setting name="imageUrl" value="qrc:/default/navi-back-pressed" />
            <setting name="imageBorders" value="[14,5,5,5]" />
        </layout>
    </control>
    <control id="DockStyle">
        <layout id="Normal" variant="image">
            <setting name="imageUrl" value="qrc:/default/dock-background"/>
            <setting name="imageBorders" value="[2,2,2,2]"/>
        </layout>
    </control>
    <control id="ToolBar">
        <layout id="Normal" variant="image">
            <setting name="imageUrl" value="qrc:/default/gradient"/>
            <setting name="imageBorders" value="[0,0,0,0]"/>
        </layout>
    </control>
    <control id="GradientDock">
        <layout id="Normal" variant="gradient">
            <setting name="frameColor" value="#666666"/>
            <setting name="frameWidth" value="1"/>
            <setting name="fillColor" value="#333333"/>
            <setting name="gradientSteps" value="[0,0.1,0.4,1]"/>
            <setting name="gradientTones" value="[1.9,1.5,1.2,0.8]"/>
        </layout>
    </control>
    <control id="TextEdit">
        <layout id="Normal">
        <setting name="imageUrl" value="qrc:/default/editline-background"/>
        <setting name="imageBorders" value="[10,5,10,5]"/>
        <setting name="fillColor" value="white"/>
        </layout>
    </control>
</styles>
